<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:gravity="center_horizontal" android:orientation="horizontal">

    <TextView android:id="@+id/item_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="text" />

    <TextView android:id="@+id/item_price" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="text" />

    <TextView android:id="@+id/item_quantity" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="text" />


</LinearLayout>